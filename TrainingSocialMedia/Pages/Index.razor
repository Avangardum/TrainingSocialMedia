@page "/"
@inject IPostPresenter PostPresenter

@foreach (var post in _posts)
{
    <div class="card col-4 post-card @post.PostCardBorderCssClass">
        <div class="card-body">
            <strong>@(post.AuthorUserName):</strong>
            <p>@post.Content</p>
        </div>
    </div>
}

@code
{
    private IReadOnlyList<PostViewModel> _posts = new List<PostViewModel>();

    protected override async Task OnInitializedAsync()
    {
        _posts = await PostPresenter.GetPostsAsync();
    }
}